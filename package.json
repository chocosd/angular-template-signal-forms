{
  "name": "signal-template-forms",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lib:fresh": "rm -rf dist/signal-template-forms && ng build lib && cd dist/signal-template-forms && yalc push && cd ../.. && yalc update --link && rm -rf node_modules/.cache .angular/cache && npm ci && npm start",
    "lib:watch": "chokidar 'src/lib/**/*' -c 'npm run lib:update'",
    "lib:dev": "ng build lib && cd dist/signal-template-forms && yalc push && cd ../..",
    "lib:update": "ng build lib && cd dist/signal-template-forms && yalc push && cd ../.. && yalc update",
    "lib:link": "yalc add signal-template-forms",
    "lib:unlink": "yalc remove signal-template-forms && npm install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.8",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@types/luxon": "^3.6.2",
    "lucide-angular": "^0.507.0",
    "luxon": "^3.6.1",
    "rxjs": "~7.8.0",
    "signal-template-forms": "^1.11.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.9",
    "@angular/cli": "^19.2.9",
    "@angular/compiler-cli": "^19.2.0",
    "@jest/types": "^30.0.0-beta.3",
    "@ngneat/spectator": "^19.6.1",
    "@types/jest": "^29.5.14",
    "chokidar-cli": "^3.0.0",
    "jest-preset-angular": "^14.5.5",
    "jsdoc": "^4.0.4",
    "ng-packagr": "^19.2.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  }
}
